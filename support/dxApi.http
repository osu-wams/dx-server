// @baseUrl = https://data.dx.oregonstate.edu
@baseUrl = https://data-stage.dx.oregonstate.edu

# @name getAlerts
GET {{baseUrl}}/jsonapi/node/alerts HTTP/1.1
  ?fields[node--alerts]=title,created,field_alert_content,field_alert_type
  &sort=-field_alert_expiration_date
  &filter[status]=1

###

# @name getAnnouncements
GET {{baseUrl}}/jsonapi/node/announcement HTTP/1.1
  ?fields[node--announcement]=id,title,date,field_announcement_body,field_announcement_action,field_announcement_image,field_audience,field_pages,field_locations
  &fields[taxonomy_term--pages]=name
  &fields[taxonomy_term--audience]=name
  &fields[taxonomy_term--locations]=name
  &fields[media--image]=name,field_media_image
  &fields[file--file]=filename,filemime,uri
  &include=field_announcement_image,field_announcement_image.field_media_image,field_audience,field_pages,field_locations
  &filter[status]=1
  &page[limit]=10

###

# @name getCategories
GET {{baseUrl}}/jsonapi/taxonomy_term/categories HTTP/1.1
  ?fields[taxonomy_term--categories]=id,name,field_taxonomy_icon
  &fields[media--image]=name,field_media_image
  &fields[file--file]=filename,filemime,uri
  &include=field_taxonomy_icon.field_media_image
  &sort=weight
  &filter[status]=1

###

# @name getCuratedResourcesFeatured
GET {{baseUrl}}/jsonapi/entity_subqueue/featured HTTP/1.1
  ?fields[entity_subqueue--services]=items,drupal_internal__name
  &fields[node--services]=id,title,field_icon_name,field_affiliation,field_audience,field_service_category,field_service_synonyms,field_service_url,field_locations
  &fields[taxonomy_term--categories]=name
  &fields[taxonomy_term--audience]=name
  &fields[taxonomy_term--affiliation]=name
  &fields[taxonomy_term--locations]=name
  &include=items,items.field_affiliation,items.field_audience,items.field_service_category,items.field_locations

###

# @name getInformation
GET {{baseUrl}}/jsonapi/node/information HTTP/1.1
  ?fields[node--information]=title,field_machine_name,body
  &filter[status]=1

###

# @name getPageContent
GET {{baseUrl}}/jsonapi/node/dashboard_content HTTP/1.1
  ?fields[node--dashboard_content]=title,body
  &filter[field_pages.name]=beta
  &filter[status]=1

###

# @name getReleaseNotes
GET {{baseUrl}}/jsonapi/node/release_notes HTTP/1.1
  ?fields[node--release_notes]=title,body,field_release_notes_date
  &filter[status]=1
  &page[limit]=1
  &sort=-created

###

# @name getResources
GET {{baseUrl}}/jsonapi/node/services HTTP/1.1
  ?fields[node--services]=id,title,field_icon_name,field_service_category,field_affiliation,field_audience,field_service_synonyms,field_service_url,field_locations
  &fields[taxonomy_term--categories]=name
  &fields[taxonomy_term--audience]=name
  &fields[taxonomy_term--affiliation]=name
  &fields[taxonomy_term--locations]=name
  &include=field_affiliation,field_audience,field_service_category,field_locations
  &sort=title
  &filter[status]=1

